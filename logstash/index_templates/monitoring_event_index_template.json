{
    "index_patterns": [
        "apigw-monitoring-*"
    ],
    "settings": {
        "number_of_shards": 5, 
        "number_of_replicas": 1
    },
    "mappings": {
        "dynamic": false,
        "properties": {
            "@timestamp": {
                "type" : "date"
            },
            "host.name": {
                "type": "keyword"
            },
            "diskUsed": {
                "type": "integer"
            },
            "instCpu": {
                "type": "integer"
            },
            "sysCpu": {
                "type": "integer"
            },
            "instMem": {
                "type": "double"
            },
            "sysMem": {
                "type": "double"
            },
            "sysMemTotal": {
                "type": "double"
            },
            "processInfo.gatewayRegion": {
                "type": "keyword"
            },
            "processInfo.gatewayName": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword"
                    }
                },
                "norms": false
            }
        }
    }
}